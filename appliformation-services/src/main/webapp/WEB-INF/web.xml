<?xml version="1.0" encoding="UTF-8"?>
<web-app id="appliformation-services" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	metadata-complete="true">

	<display-name>appliformation-services</display-name>

	<context-param>
		<param-name>version</param-name>
		<param-value>1.0-SNAPSHOT</param-value>
	</context-param>
	
	<absolute-ordering />
	
	<session-config>
	    <session-timeout>1</session-timeout>
	    <cookie-config>
	        <max-age>0</max-age>
	    </cookie-config>
	</session-config>

	<!-- Nom JNDI de la variable contenant le chemin vers les properties -->
	<context-param>
		<param-name>appConfigLocation</param-name>
		<param-value>conf/appliformation-servicesprop</param-value>
	</context-param>

	<!-- Fichiers Spring -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            classpath*:spring-appContext-web.xml
        </param-value>
	</context-param>

	<!-- Dispatcher servlet Spring pour les services REST -->
	<servlet>
		<servlet-name>services-rest</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>services-rest</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Spring Web localization filter -->
	<filter>
		<filter-name>localizationFilter</filter-name>
		<filter-class>org.springframework.web.filter.RequestContextFilter</filter-class>
	</filter>

	<!-- Spring Web localization filter mapping -->
	<filter-mapping>
		<filter-name>localizationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Metrologie -->
	<filter>
		<filter-name>metrologie</filter-name>
		<filter-class>hornet.framework.metrologie.MetrologieFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>metrologie</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>SimpleCORSFilter</filter-name>
		<filter-class>fr.gouv.diplomatie.formation.web.filter.SimpleCORSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SimpleCORSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>hornet.framework.web.listener.DynamicLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>fr.gouv.diplomatie.formation.web.listener.ApplicationContextListener</listener-class>
	</listener>


	<!-- localisation -->
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
		<param-value>fr</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>package</param-value>
	</context-param>

</web-app>
