{
  "contextPath": "appliformation-js",
  "welcomePage": "/accueil",
  "localeI18n": {
    "locale": "fr-FR",
    "lang": "fr"
  },
  "server": {
    "route": "js1",
    "port": 8888,
    "portMonitor": 9999,
    "keepAlive": true,
    "keepAliveTimeout": 15000,
    "maxConnections": 100,
    "timeout": 300000,
    "uploadFileSize": 1000000,
    "uploadAntivirus": false,
    "sessionTimeout": 1800000,
    "stackTraceLimit": 100,
    "bodyParserLimit": "50mb",
    "rethrow": false,
    "notifications": {
      "sessionTimeoutDelay": 30000,
      "notifSessionTimeoutRepeat": 5000
    }
  },
  "cookie": {
    "httpOnly": true,
    "secure": true,
    "defaultDuration": 3600
    // in second
  },
  "antivirus" : {
    "port" : 3310,
    "host" : "localhost",
    "timeout" : 60000
  },
  "security": {
    "enabled": true,
    "hpp": true,
    "ieNoOpen": true,
    "noSniff": true,
    "csp": {
      "enabled": true,
      "connectSrc": [
        "'self'"
      ],
      "scriptSrc": [
        "'self'",
        "'unsafe-inline'",
        "'unsafe-eval'"
      ],
      "styleSrc": [
        "'self'",
        "'unsafe-inline'"
      ],
      "fontSrc": [
        "'self'"
      ],
      "imgSrc": [
        "'self'"
      ],
      "formAction": [
        "'self'"
      ],
      "reportOnly": false,
      "setAllHeaders": true,
      "disableAndroid": false
    },
    "frameguard": {
      "enabled": true
      /*,"action": "sameorigin",*/
      /*"domain": ""*/
    },
    "xss": {
      "enabled": true,
      "setOnOldIE": true
    },
    "hpkp": {
      "enabled": true,
      "maxAge": 7776000000,
      "sha256s": [
        "AbCdEf123=",
        "ZyXwVu456="
      ],
      "includeSubdomains": true,
      "reportUri": null,
      "reportOnly": false
    },
    "hsts": {
      "enabled": false,
      "maxAge": 10886400000,
      "includeSubDomains": true,
      "preload": false
    },
    "csrf": {
      "enabled": true
    }
  },
  "logClient": {
    "remote": false,
    "level": "TRACE",
    "appenders": {
      "BrowserConsole": {
        "type": "BrowserConsole",
        //        "layout": {
        //          "type": "pattern",
        //          "pattern": "%p|%c|%m%"
        //        },
        "layout": {
          "type": "THIN"
        }
      },
      "Ajax": {
        "type": "Ajax",
        "layout": {
          "type": "BASIC"
        },
        "threshold": 100,
        "timeout": 3000,
        "url": "/log"
      }
    }
  },
  "defaultServices": {
    "host": "http://localhost:8080",
    "name": "appliformation-services"
  },
  "mail": {
    "config": {
      "host": "127.0.0.1",
      "port": 25,
      "secure": false,
      "connectionTimeout": 20000,
      "tls": {
        "rejectUnauthorized": false
      },
      "auth": {
        "user": "user",
        "pass": "pass"
      }
    }
  },
  "mock": {
    "enabled": true,
    "servicePage": {
      "enabled": true
    },
    "serviceData": {
      "enabled": true
    }
  },
  "fullSpa": {
    "enabled": false,
    "host": "",
    "name": "/services",
    "staticPath": ""
  },
  "authentication": {
    "loginUrl": "/login",
    "logoutUrl": "/logout"
  },
  "request": {
    "cache": {
      "client": {
        "enabled": false,
        "timetolive": 60
      },
      "server": {
        "enabled": false,
        "timetolive": 120
      }
    },
    "timeout": {
      "response": 10000,
      "deadline": 60000
    }
  }
}